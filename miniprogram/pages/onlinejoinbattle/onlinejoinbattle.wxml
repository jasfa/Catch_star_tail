    <!-- 头像 -->
    <image src="https://636c-cloud1-8gizt3c91a9e2cee-1307872384.tcb.qcloud.la/%E5%A4%B4%E5%83%8F/%E7%8E%A9%E5%AE%B62%E5%A4%B4%E5%83%8F.jpg?sign=4a718c02098015c09c85e84b8206afd9&t=1634874744" class="player1_touxiang" lazy-load="true"></image>
